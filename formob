    <div class="button-container">
        <button id="nao-button">não</button>
        <button id="sim-button">sim</button>
    </div>

    <script>
        const naoButton = document.getElementById('nao-button');
        const simButton = document.getElementById('sim-button');
        
        function moveButton(event) {
            event.preventDefault(); 
            const button = event.target;
            const maxX = window.innerWidth - button.offsetWidth;
            const maxY = window.innerHeight - button.offsetHeight;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            button.style.position = 'absolute';
            button.style.left = randomX + 'px';
            button.style.top = randomY + 'px';
        }
        
        
        naoButton.addEventListener('mouseover', moveButton);
        naoButton.addEventListener('touchstart', moveButton);
        naoButton.addEventListener('mousedown', moveButton);
        naoButton.addEventListener('click', (e) => {
            e.preventDefault(); 
            moveButton(e);
            return false;
        });

        simButton.addEventListener('click', () => {
            alert('te vejo na cama kkkkkkkkk');
        });
    </script>
</body>
